<%- include ('partials/header.ejs') -%> 

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <div class="form-floating mb-3">
            <label for="titleText">Title</label>
            <input name="postTitle" type="text" class="form-control" id="titleText" placeholder="Title of entry">
        </div>
        <div class="form-floating">
            <label for="inputText">Post</label>
            <textarea name="postBody" class="form-control" id="inputText" rows="5" cols="30" placeholder="Blog entry"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

